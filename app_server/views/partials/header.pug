          a.dropdown-item(href='/products') Storage Devices
          a.dropdown-item(href='/products') Memory Sticks
          a.dropdown-item(href='/products') Cooling Accessories
          a.dropdown-item(href='/products') Power Supplies
      li.nav-item
        a.nav-link(href='/about')
          i.fas.fa-users|  About Us
      li.nav-item
        a.nav-link(href='/shopping-cart')
          i.fas.fa-shopping-cart|  Shopping Cart
          | 
          if session.cart != undefined
            span.badge.badge-secondary=  session.cart.totalQty
          else
            span.badge.badge-secondary= 0
