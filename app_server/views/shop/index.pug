extends ../layout
include ../_includes/sharedHTMLfunctions
  
block content
  .row.banner
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    //change home banner
    img.img-responsive.about-banner(src='/images/banners/index-banner.png' , alt='CompanyBanner')
  .container
    h1= title
    p Welcome to 
      span.colorKart #{title}
    block Products
      each chunk in products
        .row
          each product in chunk
            .col-xs-12.col-sm-6.col-md-3.col-lg-3
              .img-thumbnail
                img.img-responsive(src= product.imagePath , alt='')
                .caption
                  h3= product.title
                  p.description= product.description
                  .clearfix
                    .price.float-left= product.price
                    | $  
                    +outputRating(product.rating)
                    a.btn.btn-danger.btn-xs.float-right(href='/add-to-cart/'+product._id, role='button') Add to Cart